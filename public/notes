var arr = [1,2,3,4,5,6]
function sum(arr){
var sum = 0;
    for(var i = 0; i < arr.length; i++) {
    sum += arr[i]; // sum = sum + arr[i]
    }
    return sum
    }
    sum(arr);
    
function arrAdd(arr, sum, index){
if(!sum) sum = 0;
if(!index) index = 0;
if(index === arr.length) {return sum};
else return summary(arr, sum += arr[index], index + 1)
}
arrAdd(arr);



